@model IEnumerable<Challenge.Models.Problem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.ChallengeId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                @Html.HiddenFor(modelItem => item.Challenge.Id);
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, id2 = ViewBag.ChallengeId } ) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, id2 = ViewBag.ChallengeId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, id2 = ViewBag.ChallengeId })
            </td>
        </tr>
    }

</table>
